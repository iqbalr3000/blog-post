{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended",
    "prettier",
    "next/core-web-vitals",
    "next/typescript"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "semi": true,
        "arrowParens": "always",
        "bracketSpacing": true,
        "endOfLine": "auto",
        "trailingComma": "none"
      }
    ],
    "no-console": "off",
    "no-unused-expressions": "error",
    "no-unused-vars": "error",
    "react/prop-types": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".ts", ".tsx"] }]
  }
}
